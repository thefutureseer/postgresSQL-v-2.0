datasource db {
  provider = "postgresql" 
  url      = env("POSTGRES_PRISMA_URL")
}
generator client {
  provider = "prisma-client-js" 
}
model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  carRides  CarRides[] @relation("UserCarRides")
  needs     NeedToEase[] @relation("UserNeeds")
}
model CarRides {
  id         Int    @id @default(autoincrement())
  needs      String
  quantity   Int
  needId     Int
  need       NeedToEase @relation("NeedToEaseCarRides", fields: [needId], references: [id])
  userId     Int    @map("user_id")
  user       User   @relation("UserCarRides", fields: [userId], references: [id])
  @@map("car_rides")
}

model NeedToEase {
  id    Int    @id @default(autoincrement())
  needName  String
  owner String
  userId  Int     @map("user_id")
  user   User @relation("UserNeeds", fields: [userId], references: [id])
  carRides CarRides[] @relation("NeedToEaseCarRides")
}